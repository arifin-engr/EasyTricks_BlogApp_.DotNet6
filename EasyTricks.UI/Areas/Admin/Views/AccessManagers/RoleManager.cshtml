@{
    ViewData["Title"] = "RoleManager";
}

<div class="py-3">
    <div class="row mb-3 pt-4">
        <div class="col-md-6">
            <div class="page-title">
                <h2>Role List</h2>
                <hr />
            </div>
        </div>
        <div class="col-md-6">
             <div class="text-end">
                <a asp-action="UpsertRole" asp-controller="AccessManagers" class="btn btn-sm btn-primary"><i class="fa-solid fa-circle-plus"></i>&nbsp;Create  New Role</a>
        </div>
        </div>

    </div>

    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered table-striped table-sm" id="tblRoleList" width="100%">
                <thead class="bg-primary">
                    <tr>
                        <th class="text-light">Name</th>
                        <th class="text-light">Action</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts
    {
    <script src="~/js/Account/rolejs.js"></script>
}
