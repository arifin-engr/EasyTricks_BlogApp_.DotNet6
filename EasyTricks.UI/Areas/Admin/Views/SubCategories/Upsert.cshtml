@model SubCategoryVM
@{
    ViewData["Title"] = "Upsert";
}

<div class="py-3">
    <div class="row p-4">
        <div class="col-md-12">

            <form method="post" asp-action="Upsert">

                <input hidden asp-for="SubCategory.Id" />
                <div class="border mb-2 p-4">
                    <div class="page-title">


                        <h2 class="text-primary">@(Model.SubCategory.Id == 0 ? "Create" : "Update") Sub Category</h2>
                        <hr />
                    </div>

                    <div class="row">

                        <div class="mb-3">
                            <label asp-for="SubCategory.Name"></label>
                            <input asp-for="SubCategory.Name" class="form-control" />
                            <span asp-validation-for="SubCategory.Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="SubCategory.CategoryId"></label>
                            <select asp-for="SubCategory.CategoryId" class="form-select" asp-items="@Model.CategoryList">
                                <option selected disabled>Select Category</option>
                            </select>
                            <span asp-validation-for="SubCategory.CategoryId" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            @if (Model.SubCategory.Id == 0)
                            {
                                <button class="btn btn-primary" type="submit" width="150px">Submit</button>
                            }
                            else
                            {
                                <button class="btn btn-primary" type="submit" width="150px">Update</button>
                            }

                            <a asp-action="Index" class="btn btn-secondary" width="150px">Back to List</a>
                        </div>

                    </div>

                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }


}
